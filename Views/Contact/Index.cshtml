<h3>Add New Blog</h3>
<table>
    <tr>
        <td>Blog ID :</td>
        <td>
            <input id="BlogId" readonly="true" data-bind="value: BlogId" /></td>
    </tr>
    <tr>
        <td>Name :</td>
        <td>
            <input  class="input-large" data-bind="value: Name" /></td>
    </tr>
    <tr>
        <td>Url :</td>
        <td>
            <input  class="input-large" data-bind="value: Url" /></td>
    </tr>
    <tr>
        <td colspan="2">
            <button class="btn btn-small btn-success" type="button" data-bind="click:AddBlog">Add Blog</button>
        </td>
    </tr>

</table>
<table class="table table-striped table-bordered table-condensed" data-bind="visible: Blogs().length > 0" border="0">
    <tr>
        <th>BlogId</th>
        <th>Name</th>
        <th>Url</th>
        <th>Action</th>
    </tr>
    <tbody data-bind="foreach: Blogs">
        <tr>
            <td><span data-bind="text: BlogId" /></td>
            <td>
                <span data-bind="text: Name" /></td>
            <td>
                <span data-bind="text: Url" /></td>
            <td><a class="btn btn-small btn-danger" href="#" data-bind="click: $root.RemoveBlog">Delete</a> | 
                <a class="btn btn-small btn-danger" href="#" data-bind="click: $root.EditBlog">Edit</a>

            </td>
        </tr>
    </tbody>
</table>
<div id="message" />
<script src="~/Scripts/Blog.js"></script>
